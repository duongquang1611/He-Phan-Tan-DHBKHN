        integrity="sha256-Md8eaeo67OiouuXAi8t/Xpd8t2+IaJezATVTWbZqSOw=" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet"> -->
</head>

<body>

    <div class="wrapper">
        <% include ../components/sidebar1_custom %>
        <div class="container">
            <h3 style="text-align: center; margin: 15px;">Chi tiết task: <%= report.name %></h3>

            <div class="table-responsive text-center">
                <table class="table table-hover table-bordered table-striped table-condensed">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td><%= report._id%></td>
                        </tr>
                        <tr>
                            <th>Tên báo cáo</th>
                            <td><%= report.name%></td>
                        </tr>
                        <tr>
                            <th>Mô tả</th>
                            <td><%= report.description%></td>
                        </tr>
                        <tr>
                            <th>Thông tin người thực hiện</th>
                            <td>
                                <ul class="li">Id: <%= report.doer.id %></ul>
                                <ul class="li">Họ tên: <%= report.doer.name %></ul>
                                <ul class="li">Email: <%= report.doer.email %></ul>
                            </td>
                        </tr>
                        <tr>
                            <th>Người cùng thực hiện</th>
                            <td>
                                <%= JSON.stringify(report.coDoers) %>
                            </td>
                        </tr>
                        <tr>
                            <th>Người đánh giá</th>
                            <td>
                                <%= JSON.stringify(report.reviewer) %>
                            </td>
                        </tr>
                        <tr>
                            <th>Người tạo</th>
                            <td>
                                <%= JSON.stringify(report.creator) %>
                            </td>
                        </tr>
                        <tr>
                            <th>Phòng ban</th>
                            <td><%= JSON.stringify(report.department)%></td>
                        </tr>
                        <tr>
                            <th>Phòng ban liên quan</th>
                            <td><%= JSON.stringify(report.coDepartments)%></td>
                        </tr>
                        <tr>
                            <th>Bắt đầu</th>
                            <td><%= report.start%></td>
                        </tr>
                        <tr>
                            <th>Hạn chót</th>
                            <td><%= report.due%></td>
                        </tr>
                        <tr>
                            <th>Comment</th>
                            <td><%= report.comment%></td>
                        </tr>
                        <tr>
                            <th>Tiến độ</th>
                            <td><%= report.percentComplete %> <span style="margin-left: 5px;">%</span></td>
                        </tr>
                        <tr>
                            <th>Loại công việc</th>
                            <td><%= report.type%></td>
                        </tr>
                        <tr>
                            <th>Thời gian tạo</th>
                            <td><%= report.createdAt%></td>
                        </tr>
                        <tr>
                            <th>Thời gian cập nhật</th>
                            <td><%= report.updatedAt%></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="/static/js/post.js"></script>

</body>

</html>